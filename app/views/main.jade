.nav
  .nav-container
    .header-left.pull-left
      img.logo(src="../images/tomoni_logo_blue.png")
    .header-right.pull-right
      nav.menu
        ul.navi_menu
          li.menu_item.pull-left
            a.menu_link(href="#page-3") drop
          li.menu_item.pull-left
            a.menu_link(href="#page-4") discover
          li.menu_item.pull-left
            a.menu_link(href="#page-5") chat
          li.menu_item 
            a.menu_link(href="#page-6") share
      .social
        .btns
          button.btn.btn-fb
          button.btn.btn-twt
      .language
        select.language
          option us
          option kr
          option jp
          option cn

#page-1
  .maps
    #mapcanvas(ng-init="initialize()")
    .mapoverlay
      img.mapoverlay(src="../images/dark_overlay_bg.png")
  .tomos
    .popup-area
      .popups
        .popup.popup-1(ng-show="show_popups[0]")
          p.name jordan
          p.message enhoying happy hour, 5-7!
          .bottoms
            p.notice Coming soong for iOS & Android.
        .popup.popup-2(ng-show="show_popups[1]")
          p.name jordan
          p.message enhoying happy hour, 5-7!
          .bottoms
            p.notice Coming soong for iOS & Android.
        .popup.popup-3(ng-show="show_popups[2]")
          p.name jordan
          p.message enhoying happy hour, 5-7!
          .bottoms
            p.notice Coming soong for iOS & Android.
        .popup.popup-4(ng-show="show_popups[3]")
          p.name jordan
          p.message enhoying happy hour, 5-7!
          .bottoms
            p.notice Coming soong for iOS & Android.
        .popup.popup-5(ng-show="show_popups[4]")
          p.name jordan
