.nav
  .nav-container
    .header-left.pull-left
      img.logo(src="../images/tomoni_logo_blue.png", ng-click="gotoPage(0)")
    .header-right.pull-right
      nav.menu
        ul.navi_menu
          li.menu_item.pull-left
            a.menu_link(ng-click="gotoPage(1)") {{ 'DROP' | translate }}
          li.menu_item.pull-left
            a.menu_link(ng-click="gotoPage(2)") {{ 'DISCOVER' | translate }}
          li.menu_item.pull-left
            a.menu_link(ng-click="gotoPage(3)") {{ 'CHAT' | translate }}
          li.menu_item 
            a.menu_link(ng-click="gotoPage(4)") {{ 'SHARE' | translate }}
      .social
        .btns
          a.btn.btn-fb(href="https://www.facebook.com/tomoniapp")
          a.btn.btn-twt(href="https://twitter.com/tomoniapp")
      .language
        .dropdown
          a.dropdown-toggle english
          ul.dropdown-menu(role="menu", aria-labelledby="dLabel")
            li(role="presentation") 
              a(role="menuitem", ng-click="languageChange('us')") english
            li(role="presentation")
              a(role="menuitem", ng-click="languageChange('kr')") 한국어
            li(role="presentation") 
              a(role="menuitem", ng-click="languageChange('jp')") 日本語
            li(role="presentation")
              a(role="menuitem", ng-click="languageChange('tw')") 中文

